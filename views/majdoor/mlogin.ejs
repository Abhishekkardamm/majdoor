            <div class="container">
                <div class="left-section"></div>
                <div class="right-section">
                    <div class="login-container">
                        <form class="login-form">
                            <h2 class="login-title"><i class="fas fa-user-circle"></i> Login</h2>
                            <div class="form-control">
                                <p class="name">
                                <i class="fas fa-user icon"></i>
                                <input name="us" type="text"
                                class="validate[required,custom[onlyLetter],length[0,100]] feedback-input" placeholder="Name"
                                id="name" required /> </p>
                            </div>
                            <div class="form-control">
                                <p class="email">
                                <i class="fas fa-lock icon"></i>
                                <input name="mn" type="password" class="validate[required,custom[email]] feedback-input" id="email"
                                placeholder="Contact" /> </p>
                            </div>
                            <div class="remember-me">
                                <input type="checkbox" id="rememberMe" class="checkbox-input">
                                <span class="checkbox-custom"></span>
                                <label for="rememberMe">Remember me</label>
                            </div>
                            <div class="submit">
                                <input type="submit" value="Login" id="button-blue" />
                                <div class="ease"></div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <p class="message">
                <%if(message){%>
                    <%=message%>
                        <%}%>
            </p>

        </div>

